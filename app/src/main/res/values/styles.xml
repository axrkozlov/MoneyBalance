<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="materialButtonStyle">@style/Button.Round</item>
        <item name="borderlessButtonStyle">@style/Button.Round.TextButton</item>
    </style>
    <!--<style name="ChoiseDialog" parent="Base.Theme.MaterialComponents.Dialog">-->


    <!--<style name="ChoiseDialog" parent="Theme.MaterialComponents.BottomSheetDialog">-->
    <style name="ChoiseDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Modal</item>
        <item name="colorBackgroundFloating">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="materialButtonStyle">@style/Button.Round</item>

    </style>
    <style name="BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">200dp</item>
        <item name="behavior_hideable">false</item>
        <item name="behavior_skipCollapsed">true</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Button.Round</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Round" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Button.Round.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
