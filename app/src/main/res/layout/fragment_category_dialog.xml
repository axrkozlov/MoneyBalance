<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_background"
    android:orientation="vertical"
    tools:context=".ui.category.dialog.CategoryDialogFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryDialogList"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:requiresFadingEdge="horizontal|vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:itemCount="30"
        tools:listitem="@layout/fragment_category_dialog_item">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/editCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:background="@drawable/bottom_dialog_search_background"
           android:src="@drawable/ic_settings_24dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/bottom_dialog_search_background" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:background="@color/transparent"
                android:drawableStart="@drawable/ic_search_24dp"
                android:gravity="bottom"
                android:inputType="text"
                android:paddingBottom="12dp" />

        </FrameLayout>


    </LinearLayout>
</LinearLayout>
